{% set slides = ['right', 'left'] %}

<div class="shutter" name="top">
    
    {% for slide in slides %}
        <div class="{{slide}}">
            <nav class="menu-main">
                <ul class="menu menu-{{slide}}">
                {% for item in data[slide] %}
                {% set n = loop.length / 2 %}
                    <li class="menu-item {% if loop.index == n|round(0, 'ceil') %} menu-logo {% endif %}{% if loop.index == loop.length %} lng {% endif %}">
                        <a href="{{item.link}}" class="link" name="{{item.name}}">{{item.label}}</a>
                    </li>
                {% endfor %}
                </ul>
                <div class="tosix"></div>
                <div class="toseven"></div>
            </nav>
            
            
            {% for i in 0..4 %}
                <div class="img phase{{i}}">
                    <div class="img-bg-mask">
                        <div class="img-bg front norep"></div>
                        <div class="img-bg back norep"></div>
                    </div>
                    <div class="fader"></div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>