{% extends 'bo/base_bo.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-8">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Création d'un block</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="flex-col large-section">
                        <div class="flex-row">
                            <div id="item" class="_item">

                                {{ form_start(form) }}
                                {{ form_errors(form) }}

                                {{ form_row(form.name) }}
                                {{ form_row(form.path) }}
                                {{ form_row(form.type) }}
                                {{ form_row(form.image) }}
                                {{ form_row(form.subBlock) }}

                                <a href="" id="new_item" class="btn btn-block btn-secondary btn-sm col-md-3">Ajouter un champs</a>
                                <div id="new_item_list"></div>
                                <div id="new_item_hidden"></div>
                                <div class="form-group mt-4">
                                    <div class="custom-file">
                                        <button id="aj_bl-form" class="btn btn-block btn-success col-md-3" type="submit">Enregistrer</button>
                                    </div>
                                </div>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.card -->
        </div>
        <div class="col-4">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Templates disponibles</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    {% for block in block_paths %}
                        {{ loop.index }} - <a data-path="{{ block }}" href="" class="flex-row _path-block"> {{ block }}</a><br>
                    {%  endfor %}

                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>

    <div class="col-8">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Blocks créés</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                {% if blocks is defined %}
                    {%  for block in blocks %}
                        <a href="{{ path('admin_block_id', {'id' : block.id } ) }}" class="flex-row">{{ loop.index~". " }}{{  block.name }}</a>
                        {% if not loop.last %} |{% endif %}
                    {%  endfor %}
                {% endif %}
            </div>

        </div>
        <!-- /.card -->
    </div>


{% endblock %}
